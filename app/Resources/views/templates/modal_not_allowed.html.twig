{# app/Resources/views/templates/modal_not_allowed.html.twig #}

{% macro create(header, title, content, vars) %}
<div class="modal-header">
	<h2 id="lef-forbidden" class="modal-title">{{ header|trans }}</h2>
	<button type="button" class="close" data-dismiss="modal">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body">
	<div class="cursor-default p-3">
		<h3>
			<span class="badge badge-pill badge-danger">
				<i class="fas fa-exclamation-triangle"></i> {{ title|trans }}
			</span>
		</h3>
		<p class="text-muted">
			{{ content|trans(vars) }}
		</p>
	</div>
</div>
<div class="modal-footer">
	<button class="btn btn-primary" data-dismiss="modal">
		<i class="fas fa-chevron-left"></i>
	    {{ 'lefcore.close'|trans }}
	</button>
</div>
{% endmacro %}
	