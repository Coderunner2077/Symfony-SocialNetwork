{# app\\Resources\\LEF\\ArticleBundle\\views\\Default\\ajax\\index.html.twig #}

{% if total %}
	{% for article in articles %}
		{{ include('LEFArticleBundle\\Default\\templates\\article.html.twig') }}
	{% endfor %}
{% elseif index == 0 %}
	<h3 class="text-muted">{{ 'lefarticle.index.no_article'|trans }}</h3>
{% endif %}	

<div class="sr-only lef-scrollable" id="index-{{ index }}" data-scrollable="{{ scrollable }}" data-url="{{ path('lef_article_home', {'index': (index + 1)}) }}" data-total="{{ total }}"></div>