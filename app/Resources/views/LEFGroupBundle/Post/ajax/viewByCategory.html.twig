{# app\\Resources\\LEF\\GroupBundle\\views\\Default\\ajax\\viewByCategory.html.twig #}

{% if total %}
	{% for post in groupPosts %}
		{{ include('LEFGroupBundle\\templates\\post.html.twig') }}
	{% endfor %}
{% elseif index == 0 %}
		<h3 class="text-muted">{{ 'lefgroup.by_category.no_post'|trans({'%name%': group_cat(id)}) }}</h3>
{% endif %}	

<div class="sr-only lef-scrollable" id="index-{{ index }}" data-scrollable="{{ scrollable }}" data-url="{{ path('lef_group_by_category', {'id': id, 'index': (index + 1)}) }}" data-total="{{ total }}"></div>