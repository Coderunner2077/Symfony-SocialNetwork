{# app/Resources/views/LEFGroupBundle/Member/ajax/quit.html.twig #}

<div class="modal-header gradient-blue-purple">
	<h2 id="modalApply" class="modal-title text-light cursor-default">
		{{ 'title.lefgroup.quit'|trans }}
	</h2>
	<button type="button" class="close" data-dismiss="modal">
		<span aria-hidden="true" class="text-white">&times;</span>
	</button>
</div>
<div class="modal-body">
	<div class="d-flex justify-content-start mb-4 cursor-default">
		<div class="mr-1 mr-sm-4">
			<img src="{{ asset(group.logoSrc) }}" alt="logo" class="avatar-max text-left rounded">
		</div>
		<div>
			<h3 class="pr-2 mb-4 text-left text-muted">
		        {{ group.name }}<br />{{ group.alias }}
			</h3>
			<h4>
				<a href="{{ path('lef_group_by_category', {'id': group.groupCategory.id}) }}" class="group-category py-0">
		   	        {{ group_cat(group.groupCategory.id) }}
		   		</a>
			</h4>
		</div>
	</div>
	{% if quittable %}
		<h3>{{ 'lefgroup.question.quit.group'|trans }}</h3>	
		<form method="POST" action="{{ path('lef_group_quit', {'id': group.id}) }}">
		    {{ form_rest(form) }}
			<div class="mt-4">
				<button class="btn btn-primary" data-dismiss="modal">
					<i class="fas fa-chevron-left"></i>
	                    {{ 'lefcore.cancel'|trans }}
				</button>
				<button type="submit" class="btn btn-danger">
					<i class="fas fa-sign-out-alt"></i>
			        {{ 'lefcore.ok'|trans }}
				</button>
			</div>
		</form>
	{% else %}
	<div class="cursor-default p-3">
		<h3>
			<span class="badge badge-pill badge-danger">
				<i class="fas fa-exclamation-triangle"></i> {{ 'lefgroup.quit.impossible'|trans }}
			</span>
		</h3>
		<p class="text-muted">
			{{ 'lefgroup.quit.why_not_quittable'|trans }}
		</p>
	</div>
    {% endif %}
</div>
{% if not quittable %}
<div class="modal-footer">
	<button class="btn btn-primary" data-dismiss="modal">
		<i class="fas fa-chevron-left"></i>
	    {{ 'lefcore.close'|trans }}
	</button>
</div>
{% endif %}