{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'attr': {'action': path("fos_user_security_check"), 'novalidate': 'novalidate'}}) }}
	
    {{ form_errors(form) }}
    {% if form._csrf_token is defined %}
    {{ form_row(form._csrf_token) }}
    {% endif %}
	<div class="form-group row">
    	<label for="_username" class="col-sm-4 col-md-3 col-form-label">{{ 'security.login.username'|trans }}</label>
    	<div class="col-sm-8 col-md-9">
     		{{ form_widget(form._username) }}
    		<div class="invalid-feedback">{{ 'form.feedback.invalid.enter.username'|trans }}</div>
    	</div>
    </div>
	<div class="form-group row">
   		<label for="_password" class="col-sm-4 col-md-3 col-form-label">{{ 'security.login.password'|trans }}</label>
   		<div class="col-sm-8 col-md-9">
   			{{ form_widget(form._password) }}
   			<div class="invalid-feedback">{{ 'form.feedback.invalid.enter.password'|trans }}</div>
   		</div>
	</div>
	<div class="form-row align-items-center justify-content-center">
		<div class="custom-control custom-checkbox mr-3">
			<input class="custom-control-input" type="checkbox" id="remember_me" name="_remember_me" />
    		<label class="custom-control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
		</div>
   		<div class="col-auto">
   			<button class="btn btn-success" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
   		</div>
   		<div class="col-12 text-center">
   			<a href="{{ path('fos_user_resetting_request') }}" class="btn btn-link">{{ 'security.login.forgotten'|trans }}</a>
   		</div>
   	</div>
</form>
