{# app/Resources/views/form/comment.html.twig #}

{% macro build(form, path, dataPost) %}
{% set translation_domain = 'form' %}
{{ form_start(form, {'attr': {'action': path,
                              'data-post': dataPost }}) }} 
	{{ form_errors(form) }}
	    
    {{ form_row(form.content) }}
    
	<div class="form-group row">
		<div class="offset-sm-2 col-sm-10">
			{{ form_widget(form.reset) }} {{ form_widget(form.save) }}
		</div>
	</div>
	
	{{ form_rest(form) }}
	
{{ form_end(form) }}
{% endmacro %}