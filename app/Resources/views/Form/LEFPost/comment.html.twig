{# app/Resources/views/form/post_comment.html.twig #}

{{ form_start(form, {'attr': {'action': path('lef_post_comment_add', {'id': post.id}),
                              'data-post': 'post-' ~ post.id }}) }} 
	{{ form_errors(form) }}
	    
    {{ form_row(form.content) }}
    
	{% if form.repost is defined %}
		{{ form_row(form.repost, {'id': 'child_post_repost_' ~ post.id}) }}	   
	{% endif %}
	<div class="form-group row">
		<div class="offset-sm-2 col-sm-10">
			{{ form_widget(form.reset) }} {{ form_widget(form.save) }}
		</div>
	</div>
	
	{{ form_rest(form) }}
	
{{ form_end(form) }}