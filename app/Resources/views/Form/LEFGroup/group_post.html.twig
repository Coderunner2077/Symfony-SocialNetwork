{# app/Resources/views/form/group_post.html.twig #}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	
	{{ form_errors(form) }}
	
	{{ form_row(form.group) }}
	
	{% if form.author is defined %}
	    {{ form_row(form.author) }}
	{% endif %}
	
	{% if form.group is defined %}
		{{ form_row(form.group) }}
	{% endif %}
	
	{{ form_row(form.content) }}
	
	{% if form.image is defined %}
		{{ form_row(form.image) }}
	{% endif %}
	
	{% if form.publicPost is defined %}
		{{ form_row(form.publicPost) }}
	{% endif %}
	<div class="form-group row">
		<div class="offset-sm-2 col-sm-10">
			{{ form_widget(form.reset) }} {{ form_widget(form.save) }}
		</div>
	</div>
	
	{{ form_rest(form) }}
	
{{ form_end(form) }}