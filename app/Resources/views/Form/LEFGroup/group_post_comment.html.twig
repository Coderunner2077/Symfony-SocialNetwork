{# app/Resources/views/form/group_post_comment.html.twig #}

{{ form_start(form, {'attr': {'action': path('lef_group_comment_add', {'id': groupPost.id}),
                              'data-post': 'group-post-' ~ groupPost.id }}) }} 
	{{ form_errors(form) }}
	    
    {{ form_row(form.content) }}
    
	{% if form.repost is defined %}
		{{ form_row(form.repost, {'id': 'child_group_post_repost_' ~ groupPost.id}) }}	   
			
		{% if form.group is defined %}
		    {{ form_row(form.group) }}
	    {% endif %}
	{% endif %}
	<div class="form-group row">
		<div class="offset-sm-2 col-sm-10">
			{{ form_widget(form.reset) }} {{ form_widget(form.save) }}
		</div>
	</div>
	
	{{ form_rest(form) }}
	
{{ form_end(form) }}